{
  "name": "crypto-zap-dash",
  "version": "1.0.0",
  "type": "module",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "client",
    "api"
  ],
  "scripts": {
    "dev": "tsx api/index.ts",
    "dev:client": "cd client && npm run dev",
    "dev:api": "cd api && npm run dev",
    "build": "cd client && npm install && npm run build",
    "build:api": "cd api && npm run build",
    "preview": "cd client && npm run preview",
    "check": "tsc",
    "db:push": "drizzle-kit push",
    "install:all": "npm install && cd client && npm install && cd ../api && npm install"
  },
  "dependencies": {
    "@neondatabase/serverless": "^0.10.4",
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.39.1",
    "drizzle-zod": "^0.7.0",
    "vite": "7.0.6",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/node": "20.16.11",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "drizzle-kit": "^0.31.4",
    "tsx": "^4.19.1",
    "typescript": "5.6.3"
  }
}
